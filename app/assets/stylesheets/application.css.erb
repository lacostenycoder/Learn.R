/* Welcome page, top logo, and main container*/
 #main-container {
  background: lightskyblue;
  min-height: 800px;
  padding: 30px 5px 0 5px;
  font-family: 'Open Sans', sans-serif;
 }

 #logo {
  height: 80px;
  float: left;
 }

 #nav {
  padding-bottom: 10px;
  display: inline-block;
  margin-left: 30px;
  font-size: 20px;
 }
#nav a:link {color:#FF0000;}      /* unvisited link */
#nav a:visited {color:#00FF00;}  /* visited link */
#nav a:hover {color:#FF00FF;}  /* mouse over link */
#nav a:active {color:#0000FF;}  /* selected link */


 #nav img {
  height: 70px;
 }

 #header {
  background: #088AFE url(<%= image_path('banner_100.png') %>) right no-repeat;
  height: 100px;
  overflow: hidden;
  font-family: 'Open Sans', sans-serif;
 }

 #header ul li {
  display: inline-block;
  padding: 10px;
 }

#welcome-container {
  text-align: center;
}

#show-container {
  text-align: center;
}

#welcome-box {
  display: inline-block;
  margin-top: -20px;
  padding: 50px;
  background: #D7FFD8;
}

#welcome-box h1 {
  font-size: 36px;
  padding: 20px;
}

#inner-welcome-box {
  margin: 0 auto;
  padding: 20px;
  width: 150px;
}

#inner-welcome-box a {
  padding: 10px;
}

/* User show page*/
#total-score {
  font-weight: bolder;
}

#user-sidebar {
  background-color: #F0A5AE;
  font-size: 20px;
  padding: 10px;
  float: left;
  border-radius: 12px;
  width: 175px;
  line-height: 80px;
  margin-top: 10px;
  border: 3px solid purple;
}

#lesson-box {
  padding: 10px 10px 10px 20px;
  margin-right: 100px;
  display: inline-block;
  text-align: left;
  line-height: 30px;
  float: left;
  width: 73%;
}

#lesson-box h2 {
  font-weight: bolder;
  font-size: 30px;
  line-height: 32px;
  padding: 10px 0 0 0;
}

#lesson-box h3 {
  font-weight: bolder;
  font-size: 18px;
  line-height: 32px;
  padding: 0 5px 10px 5px;
  margin-top: 10px;
  background: white;
  display: inline-block;
  border-radius: 5px 5px 0 0;
}

#lesson-box li {
  background: white;
  width: 350px;
  padding: 5px 10px;
}

#code-show-section {
  float: left;
  margin-left: 30px;
  padding: 10px;
  background: #8EDDED;
  border-radius: 12px;
  border: 3px solid purple;
}

#music-show-section {
  border-radius: 12px;
  float: left;
  margin-left: 60px;
  padding: 10px;
  background: #8EDDED;
  border: 3px solid purple;
}

#admin-panel {
  background-color: #F0A5AE;
  font-size: 20px;
  padding: 5px;
  float: left;
  border-radius: 12px;
  width: 250px;
  line-height: 20px;
  margin-top: 10px;
  border: 3px solid purple;
}


/* Code lesson show*/
#code-lesson-text {
  font-size: 18px;
  line-height: 24px;
  padding: 16px 0 16px 60px;
  float: left;
  width: 320px;
}

#code-lesson-text strong {
  font-weight: bolder;
}

#code-lesson-text h1 {
  font-weight: bolder;
  font-size: 24px;
  padding: 10px 0 10px 0;
}

#code-lessons-page {
  position: absolute;
}

.canvas {
  float: left;
}

/* User edit page (In devise view) */
.edit-user-page {
  font-weight: bolder;
  text-align: center;
  padding: 15px;
}

#edit-user-footer {
  margin: 0 auto;
  background-color: pink;
  text-align: center;
  width: 250px;
  padding: 10px;
}

/* User sign in page */
#sign-in-header {
  font-weight: bolder;
}

#sign-in-box {
 background: #D7FFD8;
 padding: 20px;
 width: 300px;
 margin: 0 auto;
}

